{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015",
      "es2016.array.include"
    ],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "removeComments": true,
    "declaration": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "outDir": "dist",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "dist"]
}